{
  "data": {
    "raw_csv": "data/raw/scb.csv",
    "train_csv": "data/processed/train_full.csv",
    "target_col": "total_price",
    "target_scale": 1,
    "numeric_features": ["area", "rooms", "year_built", "monthly_fee", "transaction_year"],
    "categorical_features": ["district"],
    "column_map": {},
    "outliers": {
      "enabled": true,
      "method": "iqr_clip",
      "k": 1.5
    }
  },
  "train": {
    "random_state": 42,
    "cv_folds": 5
  },
  "models": {
    "baseline": {
      "type": "linear"
    },
    "rf": {
      "type": "random_forest",
      "n_estimators": 400,
      "max_depth": 14,
      "min_samples_split": 6
    },
    "hgb": {
      "type": "hist_gradient_boosting",
      "max_depth": 10,
      "learning_rate": 0.06,
      "max_iter": 600
    }
  },
  "artifacts": {
    "dir": "backend/models",
    "model_prefix": "model_",
    "preprocessor_prefix": "preprocessor_"
  },
  "reports": {
    "dir": "backend/reports/metrics_full"
  }
}
